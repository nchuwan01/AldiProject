doctype html
head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src="https://kit.fontawesome.com/e44e9475ed.js" crossorigin="anonymous")

    style.
        .main {
            text-align: center;
            margin-top: 3%;
            display: flex;
            justify-content: space-evenly;
        }

        #startDate, #endDate, #selectPTO {
            margin: 5% 5%;

            height: 90%;
            width: 150px;
        }

        #commentBox {
            padding: 1% 1%;
            height: 100px;
            width: 400px;
        }
        .type
        {
            display: flex;
        }
        .word
        {
            margin-top: 5%;
        }
        .submitInfo
        {
            margin-top: 5%;
            margin-left: 39%;
        }
        .Submit {
            margin-top: 5%;
            margin-left: 12%;
        }
        #buttonHover:hover
        {
            background-color: #00ffe1;

        }
        .SelectDivs:hover {
            size: 200px;
        }
include ../includes/EmpSideBar

dev.main

   div.type
       div.word
           h3 Type:
       div
           select.SelectDivs(class="btn btn-secondary dropdown-toggle" id="selectPTO")
                option Vacation
                option Personal
                option Sick

   div.type
       div.word
           h3 Start Date:
       div
            input.SelectDivs(type="date" placeholder="Enter Start Date" class="btn btn-secondary" id="startDate")
   div.type
       div.word
           h3 End Date:
       div
           input.SelectDivs(type="date" placeholder="Enter End Date"  class="btn btn-secondary" id="endDate")
div.submitInfo
    div.commentBox
        textarea(id="commentBox" placeholder="Leave a comment" maxlength=150)

    div.Submit
        button(type="submit" id="buttonHover" alt="Comment"  class="btn btn-secondary btn-lg") Make Request