    .login
        form(action='/reset' method='post')
            #formContent
                // Icon
                div
                    img#icon(src='images/AL_BLR_SQ_MC_RGB.png' alt='User Icon')
                // Login Form
                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-user")
                    input#username(type='text' name='username' class="fontAwesome" placeholder='ID Number')
                br
                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-envelope")
                    input#password(type='password' name='password' placeholder='Enter Work email')
                // Remind Passowrd
                br
                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-key")
                    input.password(type='password' name='password' placeholder='New Password')
                // Remind Passowrd
                br
                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-key")
                    input.password(type='password' name='password' placeholder='Confirm Password')
                // Remind Passowrd
                br
                br
                input#loginButton(type='submit' value='Create Account')
                #formFooter
                    a.underlineHover(href='/') Back to Login