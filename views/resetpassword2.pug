doctype html
head
    meta(charset='UTF-8')
    title Login
    link(rel='stylesheet' href='css/AldiLogIn.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src="https://kit.fontawesome.com/e44e9475ed.js" crossorigin="anonymous")
    link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='stylesheet' href='css/AldiLogIn.css')
    .login
        script.
            check = function () {
                if (document.getElementById('pass').value ===
                    document.getElementById('passConfirm').value) {
                    document.getElementById('message').style.color = 'green';
                    document.getElementById("loginButton").disabled = false;

                    document.getElementById('message').innerHTML = 'Password matching';
                } else {
                    document.getElementById('message').style.color = 'red';
                    document.getElementById("loginButton").disabled = true;
                    document.getElementById('message').innerHTML = 'Password not matching';
                }
            }
        form(action='/reset' method='post')
            #formContent
                // Icon
                div
                    img#icon(src='images/AL_BLR_SQ_MC_RGB.png' alt='User Icon')
                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-key")
                    input.password(type='password' id="pass" name='password' minlength="8" onkeyup='check();' placeholder='New Password' required)
                // Remind Password

                br
                div(style="display: inline")
                    p.icons(class="fa-solid fa-key")
                    input.password(type='password' id="passConfirm" name='password' minlength="8" onkeyup='check();' placeholder='Confirm Password' required)
                    p#message
                // Remind Passowrd
                input#loginButton(type='submit' value='Reset')
                #formFooter
                    a.underlineHover(href='/') Back to Login