doctype html
head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src="https://kit.fontawesome.com/e44e9475ed.js" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js")

    style.
        .main {
            margin-top: 10%;
            margin-left: 160px; /* Same as the width of the sidenav */
            text-align: center;
        }

        #welcomeButton {
            font-size: 210%;
        }

        .btn-info {
            margin: 1% 1%;
        }
        .container {
            display:grid;
        }

        .container2 {
            padding-top: 10%;
            padding-left:20%;
            padding-right:20%;
            text-align-all: left;
            display: grid;
            grid-gap:15px;

            grid-template-columns:  1fr 1fr 1fr 1fr;
            grid-template-rows:2fr;
            grid-template-areas:
            "requestPending date goRequest"
        ;
        }
        .requestPending{
            grid-gap:15px;
            padding: 10%;
            text-align: center;
            border-radius: 25px;
            background: grey;

            width: 200px;
            height: 150px;
        }
        .date {
            grid-gap:15px;
            padding: 10%;
            align-content: center;
            text-align: start;
            border-radius: 25px;
            background: grey;
            width: 400px;
            height: 150px;

            grid-area: date}
        .goRequest{

            padding: 10%;
            align-content: center;
            border-radius: 25px;
            border-color: black;
            background: grey;
            padding: 20px;
            width: 200px;
            height: 150px;
            grid-area: goRequest}

include ../includes/ManagerSideBar

