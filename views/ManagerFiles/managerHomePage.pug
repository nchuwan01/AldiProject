doctype html
head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src="https://kit.fontawesome.com/e44e9475ed.js" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js")

    style.
        .containFirst>h2 {
            font-family: "Britannic Bold";
            background-color: #8fbbd5;
            border-radius: 5%;
            margin-top: 1% ;
        }
        .containBoxes
        {
            justify-content: space-evenly;
        }
        .containFirst{
            background-color: rgba(72, 100, 175, 0.2);
            background-repeat: no-repeat;
            background-size: cover;
            width: 350px;
            padding: 1%;
            border-radius: 5%;

        }
        #doughnut1, #doughnut2, #doughnut3{
            background-color: rgba(89, 213, 180, 0.9);
            border-radius: 2%;
        }
        .main {
            margin-top: 2%;
            text-align: center;
        }

        #welcomeButton {
            font-size: 210%;
        }

        .btn-info {
            margin: 1% 1%;
        }
        .container {
            display:grid;
        }

        .container2 {
            padding-top: 2%;
            padding-left:26%;
            padding-right:20%;
            text-align-all: center;
            display: grid;
            grid-gap:15px;

            grid-template-columns:  1fr 1fr 1fr;
            grid-template-rows:2fr;
            grid-template-areas:


            "requestPending date goRequest"
        ;
        }
        .requestPending{
            grid-gap:15px;
            padding: 10%;
            text-align: center;
            border-radius: 25px;
            background: grey;

            width: 200px;
            height: 150px;
        }
        .date {
            grid-gap:15px;
            padding: 10%;
            align-content: center;
            text-align: start;
            border-radius: 25px;
            background: grey;
            width: 400px;
            height: 150px;

            grid-area: date}

        .buttonReq
        {
            text-align: center;
            font-size: 20px;
            width: 250px;
            height: 50px;
        }


include ../includes/ManagerSideBar

.main
    .container
        .row.containBoxes
            .containFirst.col-lg-4.col-md-12.col-sm-12.box2
                h2 VacationDays
                canvas#doughnut2
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js')
    script(type='text/javascript').
        var ctx2= document.getElementById("doughnut2")
        var myChart2 = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['used', 'available'],
                datasets: [{
                    label: 'VTO',
                    data: [(#{maxVac}-#{vac}), #{maxVac}],
                    backgroundColor: [
                        'rgba(100,255,0,1)',
                        'rgba(0,100,255,1)'
                    ]
                }]
            }
        });
    .container2.row
        .requestPending.col-lg-4.col-md-12.col-sm-12
            h3 #{pending}
            div you have pending requests
        .date.col-lg-4.col-md-12.col-sm-12
            div Todays Date #{date}
            div Hire Date:#{hire}
    a.buttonReq(href="/makeRequest" class="btn btn-info") Go To Request


