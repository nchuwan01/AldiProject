doctype html
head
    title Director Employee Report
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src="https://kit.fontawesome.com/e44e9475ed.js" crossorigin="anonymous")
    link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')

    style.
        body {
            font-family: "Lato", sans-serif;
        }
        .sidebar {
            height: 100%;
            width: 160px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #e1e1eb;
            overflow-x: hidden;
            padding-top: 16px;
        }
        .sidebar a {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            font-size: 20px;
            color: #000000;
            display: block;
        }
        .sidebar a:hover {
            color: #f1f1f1;
        }
        .main {
            margin-left: 160px;

        }
        @media screen and (max-height: 450px) {
            .sidebar {padding-top: 15px;}
            .sidebar a {font-size: 18px;}
        }
        .navbar{
            margin-left: 160px;
        }
        #dropdown{
            color: white;
        }
        #navbar{
            background-color: #00b4dc;
        }

.sidebar
    a(href='/directorHomePage')
        i.fa.fa-fw.fa-home
        |  Home
    a(href='/directorEmployeeReport')
        i.fa.fa-fw.fa-envelope
        |  Employee Report
    a(href="/directorPrintReport")
        i(class="fa-solid fa-file")
        |  Print Report
nav.navbar.navbar-expand-sm(id="navbar")
    .container-fluid
        a.navbar-brand
            img(src="../../images/ASG_APP_AID_36x36.png" alt="image")
            a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' id="dropdown") Employee Name
            .dropdown-menu.dropdown-menu-end
                a.dropdown-item(href='#') Logout

.main
    table.table.table-striped
        thead.table-dark
            tr
                td ID
                td Name
                td Dates
                td Days Off
                td Status
                td Details
        tbody
            tr
                td Data
                td Data
                td Data
                td Data
                td Data
                td
                    button.w3-button.w3-black(onclick="document.getElementById('id01').style.display='block'") Details
                    #id01.w3-modal
                        .w3-modal-content
                            header.w3-container.w3-white
                                span.w3-button.w3-display-topright(onclick="document.getElementById('id01').style.display='none'") &times;
                                h2 Details
                            .w3-container
                                form.w3-container
                                    .w3-row-padding
                                        .w3-half
                                            label Leave Comment
                                            input.w3-input.w3-border(type='text' placeholder='Comment')
                                            input.w3-radio(type='radio' name='gender' value='Accept' checked='')
                                            label Accept
                                            p
                                            p
                                            input.w3-radio(type='radio' name='gender' value='Deny')
                                            label Deny
                                            P
                                            P
                                            button(class="w3-btn w3-blue") Send

                                        .w3-half
                                            label Comment from Manager
                                            input.w3-input.w3-border(type='text' placeholder='Comment')